{
    "redirects": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "host",
                    "value": "www.promptsgo.cc"
                }
            ],
            "destination": "https://promptsgo.cc/:path*",
            "permanent": true
        },
        {
            "source": "/public/sitemap.xml",
            "destination": "/sitemap.xml",
            "permanent": true
        },
        {
            "source": "/public/robots.txt",
            "destination": "/robots.txt",
            "permanent": true
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        },
        {
            "source": "/llms.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain; charset=utf-8"
                }
            ]
        },
        {
            "source": "/llms-full.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain; charset=utf-8"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "destination": "/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "/robots.txt"
        },
        {
            "source": "/llms.txt",
            "destination": "/llms.txt"
        },
        {
            "source": "/llms-full.txt",
            "destination": "/llms-full.txt"
        },
        {
            "source": "/prompt/:id",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(googlebot|bingbot|yandex|baiduspider|facebookexternalhit|twitterbot|linkedinbot|slackbot|whatsapp|discord|pinterest).*"
                }
            ],
            "destination": "/api/prerender?path=/prompt/:id"
        },
        {
            "source": "/global",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(googlebot|bingbot|yandex|baiduspider|facebookexternalhit|twitterbot|linkedinbot|slackbot|whatsapp|discord|pinterest).*"
                }
            ],
            "destination": "/api/prerender?path=/global"
        },
        {
            "source": "/",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": "(?i).*(googlebot|bingbot|yandex|baiduspider|facebookexternalhit|twitterbot|linkedinbot|slackbot|whatsapp|discord|pinterest).*"
                }
            ],
            "destination": "/api/prerender?path=/"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}